#!/bin/bash

# in ~/.bash_profile

export token="Insert github api token here" # generate github api token here

function create(){
    local repo_name=$1
    cd Path/To/Projects # directory you store project folders
    mkdir $repo_name
    cd $repo_name
    git init
    touch README.md
    if [[ $2 == "-venv" ]]
    then
        python3 -m venv venv
    fi
    git add .
    git commit -m "Initial commit!"
    curl -i -H "Authorization: token "$token -d '{"name": "'"$repo_name"'","private": true}' https://api.github.com/user/repos
    git remote add origin "https://github.com/your_username_here/${repo_name}.git" # add your github username in url
    git push -u origin master
}